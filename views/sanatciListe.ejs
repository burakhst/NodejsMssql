    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Sanatçı Liste</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.4/css/bulma.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    
</head>

<body>
    <div class="container " style="margin-top: 50px; width: 1280px; ">
        <div>
            <a href="/liste" class="button is-success"
                style="top:-20px; margin: 5px; float: right;">Sanatçı Listesi</a>
            <a href="/albumListe" class="button is-success"
                style="top:-20px; margin: 5px; float: right;">Albüm Listesi</a>
            <a href="/muzikListe" class="button is-success"
                style="top:-20px; margin: 5px; float: right;">Müzik Türü Listesi</a>
                <div class="dropdown is-hoverable" style="top:-20px; margin: 5px; float: right;"">
                    <div class="dropdown-trigger">
                      <button class="button" aria-haspopup="true" aria-controls="dropdown-menu4">
                        <span>Kayıt Ekle</span>
                        <span class="icon is-small">
                          <i class="fas fa-angle-down" aria-hidden="true"></i>
                        </span>
                      </button>
                    </div>
                    <div class="dropdown-menu" id="dropdown-menu4" role="menu">
                      <div class="dropdown-content">
                        <div class="dropdown-item">
                            <a href="/sanatciEkle" class="button is-success"
                                style=" width: 100%; margin-top: 5px; ">Sanatçı Ekle</a>
                                <a href="/albumEkle" class="button is-success"
                                style=" width: 100%; margin-top: 5px; ">Album Ekle</a>
                                <a href="/muzikTurEkle" class="button is-success"
                                style=" width: 100%; margin-top: 5px; ">Müzik Türü Ekle</a>
                        </div>
                      </div>
                    </div>
                  </div>


            <h1 style="font-size:25px; margin: 3px;"><b>Kayıtlar:</b></h1>
        </div>
        <table class="table is-bordered" style="width:1280px;">
            <thead>
                <tr>
                    <th width="50">S.Id</th>
                    <th>Sanatçı Adı</th>
                    <th width="180">Sanatçı Yaşıyor Mu?</th>
                    <th>Sanatçı D. Tarihi</th>
                    <th>Eklenme Tarihi</th>
                    <th width="100">Güncelle</th>
                    <th width="100">Kayıt Sil</th>
                </tr>
            </thead>
            <% veri.forEach(function(kayıt) { %>
            <tr>
                <td><%= kayıt.SanatciId %></td>
                <td><%= kayıt.SanatciAdi %></td>
                <td><%= kayıt.SanatciYasiyormu %></td>
                <td><%= kayıt.SanatciDogumTarihi %></td>
                <td><%= kayıt.EklenmeTarihi %></td>
                <td>
                    <a href="/sanatciGuncelle/<%= kayıt.SanatciId %>" class="button is-warning" >Güncelle</a>
                </td>
                <td>
                    <a name="/liste/<%= kayıt.SanatciId %>" class="button is-danger"
                        onclick="showDialog(this.name)">KAYIT SİL</a>
                </td>

            </tr>
            <div id="white-background2">

            </div>
            <div id="dlgbox2">
                <div id="dlg-header2">Kayıt Güncelleme <span class="closebtn" onclick="dlgLogin2()">&times;</span></div>
                <div id="dlg-body2">
                    <form action="/liste" method="POST">

                        <label style="margin:5px;">S.Adı</label><input
                            style="width:150px; height: 30px; margin: 5px; left: 90px; " class="input is-info"
                            type="text" name="_sAdi"><br>
                        <label style="margin:5px;">S.YaşıyorMu?(1-2)</label><input
                            style="width:150px; height: 30px; margin: 5px; left:10px;" class="input is-info" type="text"
                            name="_sYasm"><br>
                        <label style="margin:5px;">S.DoğumT</label><input
                            style="width:150px; height: 30px; margin: 5px; left:55px;" class="input is-info" type="date"
                            name="_sDt"><br>
                </div>
                <div id="dlg-footer2">
                    <input style="float:left;" type="button" class="button" onclick="dlgLogin2()" value="İPTAL">
                    <input id="btns" class="button is-danger" value="GÜNCELLE" type="submit">
                    </form>
                </div>
            </div>
    </div>

    <div id="white-background">

    </div>
    <div id="dlgbox">
        <div id="dlg-header">Kaydı Silmek İstediğinize Emin Misiniz? <span class="closebtn"
                onclick="dlgLogin()">&times;</span></div>
        <div id="dlg-body">
            <p>İşlem Onaylandığında İptal Edilemez!</p>
        </div> 
        <div id="dlg-footer">

                <a id="btn" class="button is-danger">Onayla</a>

                <a style="float:left;" onclick="dlgLogin()" class="button is-danger">Vazgeç</a>
            </div>
    </div>
    </div>
    <% }); %>
    </table>

</body>

<script>  function dlgLogin2() {
    var whitebg = document.getElementById("white-background2");
    var dlg = document.getElementById("dlgbox2");
    whitebg.style.display = "none";
    dlg.style.display = "none";
}

function showDialog2(prs) {
    var whitebg = document.getElementById("white-background2");
    var dlg = document.getElementById("dlgbox2");
    whitebg.style.display = "block";
    dlg.style.display = "block";

    var winWidth = window.innerWidth;
    var winHeight = window.innerHeight;

    dlg.style.left = (winWidth / 2) - 480 / 2 + "px";
    dlg.style.top = "150px";
    var btns = document.getElementById('btns');
    btns.onclick = function () {
        location.href = prs;
    }
}
function dlgLogin() {
    var whitebg = document.getElementById("white-background");
    var dlg = document.getElementById("dlgbox");
    whitebg.style.display = "none";
    dlg.style.display = "none";
}

function showDialog(prs) {
    var whitebg = document.getElementById("white-background");
    var dlg = document.getElementById("dlgbox");
    whitebg.style.display = "block";
    dlg.style.display = "block";

    var winWidth = window.innerWidth;
    var winHeight = window.innerHeight;

    dlg.style.left = (winWidth / 2) - 480 / 2 + "px";
    dlg.style.top = "150px";

    var btn = document.getElementById('btn');
    btn.onclick = function () {
        location.href = prs;
    }
}

</script>

</html>