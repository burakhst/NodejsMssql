                    <td><input class="input" type="text" name="_mId"  value="<%= m_Id %>" readonly></td>
                </tr>
                
                <tr>
                    <th>Müzik Adı :</th>
                    <td><input style="width:500px;" class="input" type="text" name="_mAdi" placeholder="Müzik Türü"></td>
                </tr>
                
                
                <tr>
                    <th></th>
                    <td>
                             <button  type="submit" class="button is-link">Kaydet</button>
        
                        <a href="/muzikListe" class="button">İPTAL</a>
                    </td>
            
                </tr>
            </form>
        </table>


    </div>
</body>

</html>